{
  "manifest_version": 3,
  "name": "IP Flag Info",
  "version": "0.0.1",
  "description": "Displays the country flag of your current public IP address in the toolbar",
  "author": "Dzmtry Duboyski",
  "homepage_url": "https://github.com/dzmitry-duboyski/geo-ip",
  "keywords": [
    "ip",
    "country",
    "flag",
    "location",
    "geolocation",
    "vpn",
    "proxy",
    "network",
    "public ip",
    "ip address"
  ],
  "permissions": [
    "alarms",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "https://ipinfo.io/*",
    "https://api.ipify.org/*",
    "https://ipwho.is/*",
    "https://ipapi.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/default-16.png",
      "32": "icons/default-32.png",
      "48": "icons/default-48.png",
      "128": "icons/default-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "IP Flag Info"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sounds/alert.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}